<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/fetch_recommend"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center_vertical"
            android:paddingStart="16dp"
            android:text="Fetch recommend" />

        <TextView
            android:id="@+id/dump_db"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center_vertical"
            android:paddingStart="16dp"
            android:text="Dump recommend database" />

        <TextView
            android:id="@+id/clear_db"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center_vertical"
            android:paddingStart="16dp"
            android:text="Clear recommend database" />

        <TextView
            android:id="@+id/notify_reminder"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center_vertical"
            android:paddingStart="16dp"
            android:text="Make notification (for next coming program)" />

        <RelativeLayout
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/notify_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:text="Submit notification interval "/>

            <EditText
                android:id="@+id/notify_interval_sec"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:singleLine="true"
                android:inputType="number"
                android:layout_toEndOf="@+id/notify_description"
                android:hint="seconds"/>

            <Button
                android:id="@+id/notify_set"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:text="Set timer"/>
        </RelativeLayout>

        <RelativeLayout
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/recommend_update_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:text="Update recommend interval "/>

            <EditText
                android:id="@+id/recommend_update_interval"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:singleLine="true"
                android:inputType="number"
                android:layout_toEndOf="@+id/recommend_update_description"
                android:hint="seconds"/>

            <Button
                android:id="@+id/recommend_update_set"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:text="Set timer"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/recommend_update_cancel"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:selectableItemBackground"
            android:gravity="center_vertical"
            android:paddingStart="16dp"
            android:text="Cancel recommend update timer" />

        <TextView
            android:id="@+id/recommend_update_configure_reset"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:selectableItemBackground"
            android:gravity="center_vertical"
            android:paddingStart="16dp"
            android:text="Clear update configuration" />



    </LinearLayout>

</ScrollView>
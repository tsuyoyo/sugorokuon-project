<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/info_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/app_accent_background">

                    <ImageView
                        android:id="@+id/thumbnail"
                        android:layout_width="320dp"
                        android:layout_height="180dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="8dp"
                        tools:background="@android:color/holo_green_light"/>

                    <RelativeLayout
                        android:id="@+id/content_area"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/thumbnail"
                        android:layout_centerHorizontal="true"
                        android:gravity="bottom"
                        android:orientation="vertical"
                        android:paddingEnd="16dp"
                        android:paddingStart="16dp">

                        <RelativeLayout
                            android:id="@+id/on_air_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/on_air_time_start"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/app_accent"
                                android:textSize="@dimen/textsize_large"
                                android:textStyle="bold"
                                tools:text="21:30" />

                            <TextView
                                android:id="@+id/on_air_time_separator"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_toEndOf="@+id/on_air_time_start"
                                android:paddingEnd="2dp"
                                android:paddingStart="2dp"
                                android:text="-"
                                android:textColor="@color/app_accent"
                                android:textSize="@dimen/textsize_large" />

                            <TextView
                                android:id="@+id/on_air_time_end"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_toEndOf="@+id/on_air_time_separator"
                                android:textColor="@color/app_accent"
                                android:textSize="@dimen/textsize_standard"
                                tools:text="24:00" />

                        </RelativeLayout>

                        <TextView
                            android:id="@+id/title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_below="@+id/on_air_time"
                            android:textStyle="bold"
                            tools:text="とんカツワイド" />

                        <TextView
                            android:id="@+id/personalities"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_below="@+id/title"
                            tools:text="Kazumi saito" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/ad_area"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/content_area"
                        android:layout_marginTop="8dp"
                        android:layout_marginStart="16dp">

                        <!-- サイズ (320 x 50 は、下記サイトを参考にした)
                        https://developers.google.com/mobile-ads-sdk/docs/admob/intermediate?hl=ja#play
                        @string/adUnitId
                        build.gradleの中にStringを定義した
                        resValue "string", "adUnitId", "ca-app-pub-3940256099942544/6300978111"
                        -->
                        <com.google.android.gms.ads.AdView
                            android:id="@+id/ad_view"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            ads:adSize="BANNER"
                            ads:adUnitId="@string/adUnitId" />

                        <Button
                            android:id="@+id/close_ad"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_toEndOf="@+id/ad_view"
                            android:background="@drawable/ic_close_grey_600_18dp" />

                    </RelativeLayout>


                    <RelativeLayout
                        android:id="@+id/operation_area"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/ad_area"
                        android:layout_centerHorizontal="true"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/open_web_site"
                            style="@style/Widget.AppCompat.Button.Borderless.Colored"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:text="@string/button_open_web_site"
                            android:drawableStart="@drawable/ic_web_grey_600_24dp"
                            android:drawablePadding="8dp"
                            android:layout_alignParentStart="true"
                            />

                        <TextView
                            android:id="@+id/share_program"
                            style="@style/Widget.AppCompat.Button.Borderless.Colored"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:text="@string/button_share_program"
                            android:drawableStart="@drawable/ic_share_grey_600_24dp"
                            android:drawablePadding="8dp"
                            android:layout_alignParentEnd="true"
                            />

                    </RelativeLayout>

                </RelativeLayout>

            <android.support.v4.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                tools:background="@android:color/holo_red_light"
                >
                <WebView
                    android:id="@+id/content"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </android.support.v4.widget.NestedScrollView>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/info_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/content_card">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/ad_area"
                android:layout_marginTop="32dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- サイズ (320 x 50 は、下記サイトを参考にした)
                https://developers.google.com/mobile-ads-sdk/docs/admob/intermediate?hl=ja#play
                @string/adUnitId
                build.gradleの中にStringを定義した
                resValue "string", "adUnitId", "ca-app-pub-3940256099942544/6300978111"
                -->
                <com.google.android.gms.ads.AdView
                    android:id="@+id/ad_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    ads:adSize="BANNER"
                    ads:adUnitId="@string/adUnitId" />

                <Button
                    android:id="@+id/close_ad"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_toEndOf="@+id/ad_view"
                    android:background="@drawable/ic_close_grey_600_18dp"/>

            </RelativeLayout>

            <WebView
                android:id="@+id/content"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

    <android.support.v7.widget.CardView
        android:id="@+id/content_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardElevation="8dp"
        android:layout_alignParentBottom="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/app_accent_background">

            <RelativeLayout
                android:id="@+id/content_area"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:gravity="bottom"
                android:orientation="vertical"
                android:paddingBottom="8dp"
                android:paddingEnd="8dp"
                android:paddingStart="8dp"
                android:paddingTop="8dp">

                <RelativeLayout
                    android:id="@+id/on_air_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/on_air_time_start"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/app_accent"
                        android:textSize="@dimen/textsize_large"
                        android:textStyle="bold"
                        tools:text="21:30" />

                    <TextView
                        android:id="@+id/on_air_time_separator"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@+id/on_air_time_start"
                        android:paddingEnd="2dp"
                        android:paddingStart="2dp"
                        android:text="-"
                        android:textColor="@color/app_accent"
                        android:textSize="@dimen/textsize_large" />

                    <TextView
                        android:id="@+id/on_air_time_end"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@+id/on_air_time_separator"
                        android:textColor="@color/app_accent"
                        android:textSize="@dimen/textsize_standard"
                        tools:text="24:00" />

                </RelativeLayout>

                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/on_air_time"
                    android:textStyle="bold"
                    tools:text="とんカツワイド" />

                <TextView
                    android:id="@+id/personalities"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/title"
                    tools:text="Kazumi saito" />

            </RelativeLayout>

            <TextView
                android:id="@+id/open_web_site"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/content_area"
                android:gravity="center"
                android:text="@string/button_open_web_site" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_marginTop="4dp"
        android:layout_marginStart="8dp"
        app:cardElevation="8dp"
        app:cardCornerRadius="8dp">

        <TextView
            android:id="@+id/close"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center|start"
            android:drawableStart="@drawable/ic_arrow_back_white_18dp"
            android:clickable="true"
            android:focusable="true"
            android:background="@color/app_accent"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:text="@string/button_back_to_timetable" />

    </android.support.v7.widget.CardView>


</RelativeLayout>
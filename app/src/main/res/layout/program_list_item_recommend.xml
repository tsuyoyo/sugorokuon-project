<?xml version="1.0" encoding="utf-8"?>
<!-- 
/**
 * 番組のTimeTableのitem（オススメ番組用）。
 *
 */
-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    android:background="@drawable/listitem_back"
    android:baselineAligned="false"
    android:orientation="horizontal" >
	
    <!-- 放送日時 -->
    <LinearLayout android:layout_width="60dp"
			      android:layout_height="match_parent"
			      android:layout_marginRight="10dp"
    			  android:orientation="vertical">
        <!-- 日付-->
        <TextView android:layout_width="match_parent"
            	  android:layout_height="wrap_content"
	              android:id="@+id/program_list_item_date"            	  
            	  android:gravity="left|center_vertical"
            	  android:text="@string/onair_date"
            	  android:textSize="20sp"
            	  android:textColor="#0582ff"/>    			  
        <!-- 開始時刻 -->
        <TextView android:layout_width="match_parent"
            	  android:layout_height="wrap_content"
	              android:id="@+id/program_list_item_starttime"            	  
            	  android:gravity="left|center_vertical"
            	  android:text="@string/onair_start_time"
            	  android:textSize="15sp"
            	  android:textColor="#0582ff"/>
        <!-- 終了時刻 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/program_list_item_endtime"
            android:gravity="right|center_vertical"
            android:text="@string/onair_end_time"
            android:textColor="#0582ff"
            android:textSize="15sp" />
    </LinearLayout>
    
    <!-- タイトルとパーソナリティとラジオ局ロゴ -->
    <LinearLayout android:layout_width="0dp"
			      android:layout_height="match_parent"
			      android:layout_weight="1"
			      android:gravity="center_vertical"
			      android:layout_gravity="center_vertical"
    			  android:orientation="vertical">
        <!-- タイトル -->
        <TextView android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:id="@+id/program_list_item_title"
            	  android:gravity="left|center_vertical"
            	  android:layout_gravity="center_vertical"
            	  android:textSize="20sp"
            	  android:textColor="@android:color/primary_text_light"/>
        
   	    <LinearLayout android:layout_width="match_parent"
				      android:layout_height="match_parent"
    	           	  android:layout_gravity="center_vertical"
    				  android:orientation="horizontal">
	        <!-- パーソナリティ -->
    	    <TextView android:layout_width="0dp"
        	          android:layout_height="wrap_content"
        	          android:layout_weight="1"
            	      android:id="@+id/program_list_item_personality"
            		  android:layout_gravity="left|center_vertical"
            		  android:textSize="15sp"
            		  android:textColor="@android:color/secondary_text_light"/>
	        <!-- ラジオ局のロゴ -->
    	    <ImageView android:layout_width="wrap_content"
        	           android:layout_height="wrap_content"
            	       android:id="@+id/program_list_item_station_logo"
            	       android:contentDescription="Logo for radio station"
            		   android:layout_gravity="right|center_vertical"
					   />
      	 </LinearLayout>   

   </LinearLayout>
    
</LinearLayout>

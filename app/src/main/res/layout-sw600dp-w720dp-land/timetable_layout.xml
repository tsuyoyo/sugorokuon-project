<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true">

    <LinearLayout
        android:id="@+id/timetable_fragment_top_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <android.support.v4.view.ViewPager
            android:id="@+id/timetable_pager"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="30">

            <android.support.v4.view.PagerTabStrip
                android:id="@+id/timetable_pager_tab_strip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:background="@color/app_accent_background"
                android:paddingBottom="1dp"
                android:paddingTop="1dp"
                android:textColor="@color/app_text_primary" />
        </android.support.v4.view.ViewPager>

        <include
            layout="@layout/program_info_viewer_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="60">
        </include>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/timetable_station_list_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/timetable_station_list_other_area"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="30"
            android:background="#55000000"
            android:text="" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="70"
            android:layout_gravity="bottom"
            android:background="@color/background_material_light"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/app_primary"
                android:gravity="center_horizontal"
                android:padding="5dp"
                android:text="@string/station_list_dialog_title"
                android:textColor="@color/actionbar_text" />

            <ListView
                android:id="@+id/timetable_station_list"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"></ListView>
        </LinearLayout>
    </LinearLayout>


    <ImageButton
        android:id="@+id/timetable_station_list_open_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_marginBottom="55dp"
        android:layout_marginRight="3dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/circle_button"
        android:padding="10dp"
        android:src="@drawable/ic_list_white_24dp" />

</FrameLayout>
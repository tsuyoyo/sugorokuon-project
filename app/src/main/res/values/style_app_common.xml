<resources>

    <!-- the theme applied to the application or activity -->
    <style name="Theme.SugorokuonTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/app_primary</item>
        <item name="colorPrimaryDark">@color/app_primary_dark</item>
        <item name="colorAccent">@color/app_accent</item>
        <!--<item name="android:textColorPrimary">@color/primary_text_default_material_dark</item>-->
    </style>

    <style name="SugorokuonToolbarTheme" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:background">@color/app_primary</item>
    </style>

    <style name="SugorokuonDateTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="SugorokuonDateTabTheme" parent="Base.Widget.Design.TabLayout">
        <item name="tabSelectedTextColor">@color/actionbar_text</item>
        <item name="tabTextAppearance">@style/SugorokuonDateTabTextAppearance</item>
    </style>

</resources>
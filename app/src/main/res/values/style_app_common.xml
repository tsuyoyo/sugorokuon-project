<resources>

    <!-- the theme applied to the application or activity -->
    <style name="Theme.SugorokuonTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/app_primary</item>
        <item name="colorPrimaryDark">@color/app_primary</item>
        <item name="colorAccent">@color/app_accent</item>

        <!--Note : without setting prefereceTheme, crash happens in onCreate of PreferenceFragmentCompat -->
        <item name="preferenceTheme">@style/SugorokuonPreferenceThemeOverlay</item>
    </style>

    <style name="SugorokuonToolbarTheme" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:background">@color/app_primary</item>
    </style>

    <!-- For setting view customization -->
    <style name="SugorokuonPreferenceThemeOverlay" parent="@style/PreferenceThemeOverlay.v14.Material">
    </style>

</resources>